---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const stack_en = [
  {
    category: "Backend & Core",
    items: ["Java (Spring Boot)", "Node.js", "Go", "Python", "Microservices"]
  },
    {
    category: "Databases & Caching",
    items: ["MongoDB", "Redis", "MySQL", "PostgreSQL", "Other SQL"]
  },
  {
    category: "Cloud & Infrastructure",
    items: ["AWS", "Docker", "CI/CD Pipelines"]
  }
];

const stack_id = [
 {
    category: "Backend & Core",
    items: ["Java (Spring Boot)", "Node.js", "Go", "Python", "Microservices"]
  },
    {
    category: "Databases & Caching",
    items: ["MongoDB", "Redis", "MySQL", "PostgreSQL", "Other SQL"]
  },
  {
    category: "Cloud & Infrastructure",
    items: ["AWS", "Docker", "CI/CD Pipelines"]
  }
];

const stack = lang === 'en' ? stack_en : stack_id;
---
<section id="tech-stack" class="tech-stack">
  <div class="container">
    <span class="section-subtitle">{t('tech.subtitle')}</span>
    <h2 class="section-title">{t('tech.title')} <span class="text-gold">{t('tech.title_gold')}</span></h2>
    
    <div class="stack-grid">
      {stack.map(group => (
        <div class="stack-category">
          <h3 class="category-title">{group.category}</h3>
          <ul class="stack-list">
            {group.items.map(item => (
              <li class="stack-item">
                <span class="bullet"></span>
                {item}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .tech-stack {
  padding: var(--section-padding);
  background-color: rgba(60, 40, 30, 0.7); /* opacity 0.85 */
  color: var(--color-white);
  }

  .tech-stack .section-title {
    color: var(--color-white);
  }

  .stack-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 4rem;
    margin-top: 5rem;
  }

  .category-title {
    font-size: 1.25rem;
    color: var(--color-gold);
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-bottom: 1px solid rgba(212, 175, 55, 0.2);
    padding-bottom: 1rem;
  }

  .stack-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .stack-item {
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    color: rgba(255, 255, 255, 0.85);
    transition: color 0.3s ease;
  }

  .stack-item:hover {
    color: var(--color-gold-light);
  }

  .bullet {
    width: 8px;
    height: 8px;
    background-color: var(--color-gold);
    border-radius: 50%;
    margin-right: 1rem;
    display: inline-block;
  }

  .text-gold {
    color: var(--color-gold);
  }
</style>
