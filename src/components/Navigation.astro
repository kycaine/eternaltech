---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { languages } from "../i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Get base path from Astro.url
const url = new URL(Astro.url);
const base = import.meta.env.BASE_URL;

function getLocalizedPath(newLang: string) {
  const parts = url.pathname.split("/");
  // parts[0] is '', parts[1] is 'eternaltech'
  if (newLang === "en") {
    // Switch to EN: remove lang if it's there
    if (parts[2] === "id") {
      parts.splice(2, 1);
    }
  } else {
    // Switch to ID: add 'id' if not there
    if (parts[2] !== "id") {
      parts.splice(2, 0, "id");
    }
  }
  return parts.join("/") || "/";
}
---

<nav class="nav">
  <div class="container nav-container">
    <a href={base} class="logo">
      KYCAINE <span class="text-gold">ETERNALTECH</span>
    </a>

    <div class="nav-links">
      <a href="#services">{t("nav.services")}</a>
      <a href="#tech-stack">{t("nav.stack")}</a>
      <a href="#portfolio">{t("nav.work")}</a>
      <a href="#workflow">{t("nav.process")}</a>
      <a href="#contact" class="nav-cta">{t("nav.consultation")}</a>

      <div class="lang-switch">
        {
          Object.entries(languages).map(([code, label]) => (
            <a
              href={getLocalizedPath(code)}
              class:list={["lang-link", { active: lang === code }]}
            >
              {label}
            </a>
          ))
        }
      </div>
    </div>

    <button class="mobile-menu-toggle" aria-label="Toggle Menu">
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 1.5rem 0;
    transition: all 0.4s ease;
    background-color: transparent;
  }

  .nav.scrolled {
    background-color: rgba(26, 18, 11, 0.95);
    padding: 1rem 0;
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-white);
    letter-spacing: 0.1em;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  .nav-links a {
    color: rgba(255, 255, 255, 0.8);
    font-family: var(--font-heading);
    font-weight: 500;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .nav-links a:hover {
    color: var(--color-gold);
  }

  .nav-cta {
    background-color: var(--color-gold);
    color: var(--color-dark-brown) !important;
    padding: 0.6rem 1.2rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .nav-cta:hover {
    background-color: var(--color-white) !important;
    transform: translateY(-2px);
  }

  .lang-switch {
    display: flex;
    gap: 0.5rem;
    margin-left: 1rem;
    padding-left: 1rem;
    border-left: 1px solid rgba(255, 255, 255, 0.2);
  }

  .lang-link {
    font-size: 0.95rem !important;
    font-weight: 700;
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }

  .lang-link:hover,
  .lang-link.active {
    opacity: 1;
    color: var(--color-gold) !important;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .mobile-menu-toggle span {
    display: block;
    width: 25px;
    height: 2px;
    background-color: var(--color-white);
  }

  .text-gold {
    color: var(--color-gold);
  }

  @media (max-width: 992px) {
    .nav-links {
      display: none;
    }
    .mobile-menu-toggle {
      display: flex;
    }
  }
</style>

<script>
  // Simple scroll effect for navigation
  const nav = document.querySelector(".nav");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      nav?.classList.add("scrolled");
    } else {
      nav?.classList.remove("scrolled");
    }
  });
</script>
