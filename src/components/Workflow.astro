---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const steps_en = [
  {
    title: "Requirement Discussion",
    description: "Understand project goals, technical requirements, and system constraints before defining the implementation scope."
  },
  {
    title: "System Design",
    description: "Design API structure, database schema, and integration flow to ensure clean and maintainable architecture."
  },
  {
    title: "Development",
    description: "Implement backend services using structured coding practices, version control, and modular architecture."
  },
  {
    title: "Testing",
    description: "Perform functional testing, API validation, and basic performance checks to ensure system reliability."
  },
  {
    title: "Deployment",
    description: "Containerize and deploy services using Docker and cloud infrastructure such as AWS-based environments."
  },
  {
    title: "Maintenance & Improvement",
    description: "Provide ongoing fixes, minor enhancements, and performance tuning based on project needs."
  }
];

const steps_id = [
  {
    title: "Diskusi Kebutuhan",
    description: "Memahami tujuan proyek, kebutuhan teknis, dan batasan sistem sebelum menentukan ruang lingkup implementasi."
  },
  {
    title: "Perancangan Sistem",
    description: "Merancang struktur API, skema database, serta alur integrasi untuk memastikan arsitektur yang rapi dan mudah dikembangkan."
  },
  {
    title: "Pengembangan",
    description: "Mengimplementasikan layanan backend dengan praktik coding terstruktur, version control, dan arsitektur modular."
  },
  {
    title: "Pengujian",
    description: "Melakukan pengujian fungsional, validasi API, dan pengecekan performa dasar untuk memastikan sistem berjalan dengan baik."
  },
  {
    title: "Perilisan",
    description: "Melakukan containerization dan deployment layanan menggunakan Docker serta infrastruktur cloud seperti AWS."
  },
  {
    title: "Pemeliharaan & Peningkatan",
    description: "Memberikan perbaikan bug, peningkatan minor, dan optimasi performa sesuai kebutuhan proyek."
  }
];

const steps = lang === 'en' ? steps_en : steps_id;
---
<section id="workflow" class="workflow">
  <div class="container">
    <span class="section-subtitle">{t('workflow.subtitle')}</span>
    <h2 class="section-title">{t('workflow.title')} <span class="text-gold">{t('workflow.title_gold')}</span></h2>
    
    <div class="workflow-steps">
      {steps.map((step, index) => (
        <div class="step-item">
          <div class="step-number">{String(index + 1).padStart(2, '0')}</div>
          <div class="step-content">
            <h3 class="step-title">{step.title}</h3>
            <p class="step-text">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .workflow {
    padding: var(--section-padding);
    background-color: var(--color-off-white);
  }

  .workflow-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    margin-top: 5rem;
    position: relative;
  }

  .step-item {
    display: flex;
    gap: 1.5rem;
    padding: 2rem;
    background-color: var(--color-white);
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.03);
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .step-item:hover {
    border-color: var(--color-gold);
    transform: translateY(-5px);
  }

  .step-number {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-gold-light);
    line-height: 1;
  }

  .step-title {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--color-dark-brown);
  }

  .step-text {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .text-gold {
    color: var(--color-gold);
  }
</style>
