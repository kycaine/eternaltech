---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const steps_en = [
  {
    title: "Discovery & Analysis",
    description: "Deep dive into your business logic, constraints, and data landscape to define clear technical objectives."
  },
  {
    title: "Sprint Planning",
    description: "Architecting the roadmap with agile methodologies, ensuring transparency and alignment on every feature."
  },
  {
    title: "Development (CI/CD)",
    description: "High-velocity engineering with automated pipelines, rigorous code reviews, and constant integration."
  },
  {
    title: "QA & Stress Testing",
    description: "Ensuring resilience through automated testing, security audits, and performance benchmarking under load."
  },
  {
    title: "Deployment & Scale",
    description: "Zero-downtime shipping to cloud-native environments with robust monitoring and telemetry."
  },
  {
    title: "Optimization",
    description: "Continuous refinement based on real-world data and evolving business requirements for maximum ROI."
  }
];

const steps_id = [
  {
    title: "Penemuan & Analisis",
    description: "Pahami lebih dalam logika bisnis, kendala, dan lanskap data Anda untuk menetapkan tujuan teknis yang jelas."
  },
  {
    title: "Perencanaan Sprint",
    description: "Merancang roadmap dengan metodologi tangkas, memastikan transparansi dan keselarasan pada setiap fitur."
  },
  {
    title: "Pengembangan (CI/CD)",
    description: "Rekayasa kecepatan tinggi dengan pipeline otomatis, tinjauan kode yang ketat, dan integrasi konstan."
  },
  {
    title: "QA & Stress Testing",
    description: "Memastikan ketangguhan melalui pengujian otomatis, audit keamanan, dan pembandingan kinerja di bawah beban."
  },
  {
    title: "Penyebaran & Skala",
    description: "Pengiriman tanpa waktu henti ke lingkungan asli cloud dengan pemantauan dan telemetri yang kuat."
  },
  {
    title: "Optimasi",
    description: "Penyempurnaan berkelanjutan berdasarkan data dunia nyata dan persyaratan bisnis yang berkembang untuk ROI maksimum."
  }
];

const steps = lang === 'en' ? steps_en : steps_id;
---
<section id="workflow" class="workflow">
  <div class="container">
    <span class="section-subtitle">{t('workflow.subtitle')}</span>
    <h2 class="section-title">{t('workflow.title')} <span class="text-gold">{t('workflow.title_gold')}</span></h2>
    
    <div class="workflow-steps">
      {steps.map((step, index) => (
        <div class="step-item">
          <div class="step-number">{String(index + 1).padStart(2, '0')}</div>
          <div class="step-content">
            <h3 class="step-title">{step.title}</h3>
            <p class="step-text">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .workflow {
    padding: var(--section-padding);
    background-color: var(--color-off-white);
  }

  .workflow-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    margin-top: 5rem;
    position: relative;
  }

  .step-item {
    display: flex;
    gap: 1.5rem;
    padding: 2rem;
    background-color: var(--color-white);
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.03);
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .step-item:hover {
    border-color: var(--color-gold);
    transform: translateY(-5px);
  }

  .step-number {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-gold-light);
    line-height: 1;
  }

  .step-title {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--color-dark-brown);
  }

  .step-text {
    font-size: 0.95rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .text-gold {
    color: var(--color-gold);
  }
</style>
