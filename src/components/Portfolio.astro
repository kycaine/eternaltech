---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const cases_en = [
  {
    client: "Government-Grade Real Estate System",
    challenge: "Develop secure and reliable backend modules for registration, document processing, and complaint handling.",
    solution: "Implemented Spring Boot services with RabbitMQ for async communication and deployed in Kubernetes-based environment.",
    impact: "Reduced manual workflow through automation and ensured system reliability for public-sector usage."
  },
  {
    client: "WhatsApp E-commerce Backend",
    challenge: "Handle high-volume WhatsApp messaging requests and ensure stable order processing for multiple clients.",
    solution: "Built backend APIs in Go, integrated databases for order & client data, and deployed services using Docker.",
    impact: "Improved message handling reliability and maintained stable service performance under continuous traffic."
  },
];

const cases_id = [
  {
    client: "Sistem Real Estate Skala Pemerintahan",
    challenge: "Mengembangkan modul backend yang aman dan andal untuk registrasi, pemrosesan dokumen, dan penanganan komplain.",
    solution: "Mengimplementasikan service berbasis Spring Boot dengan RabbitMQ untuk komunikasi asynchronous dan deployment di environment Kubernetes.",
    impact: "Mengurangi proses manual melalui otomasi serta menjaga stabilitas dan keandalan sistem untuk penggunaan sektor publik."
  },
  {
    client: "Backend WhatsApp E-commerce",
    challenge: "Menangani request pesan WhatsApp dalam volume tinggi serta memastikan proses order berjalan stabil untuk banyak klien.",
    solution: "Membangun API backend menggunakan Go, mengintegrasikan database untuk manajemen order dan data klien, serta deployment dengan Docker.",
    impact: "Meningkatkan keandalan pengiriman pesan dan menjaga performa sistem dalam trafik berkelanjutan."
  },
];

const cases = lang === 'en' ? cases_en : cases_id;
const labels = {
  challenge: lang === 'en' ? 'The Challenge' : 'Tantangan',
  solution: lang === 'en' ? 'Our Solution' : 'Solusi Kami',
  impact: lang === 'en' ? 'The Impact' : 'Dampaknya',
};
---
<section id="portfolio" class="portfolio">
  <div class="container">
    <span class="section-subtitle">{t('portfolio.subtitle')}</span>
    <h2 class="section-title">{t('portfolio.title')} <span class="text-gold">{t('portfolio.title_gold')}</span></h2>
    
    <div class="cases-container">
      {cases.map(item => (
        <div class="case-card">
          <div class="case-header">
            <h3 class="client-name">{item.client}</h3>
          </div>
          <div class="case-body">
            <div class="case-section">
              <h4>{labels.challenge}</h4>
              <p>{item.challenge}</p>
            </div>
            <div class="case-section">
              <h4>{labels.solution}</h4>
              <p>{item.solution}</p>
            </div>
            <div class="case-section impact">
              <h4>{labels.impact}</h4>
              <p>{item.impact}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .portfolio {
    padding: var(--section-padding);
    background-color: var(--color-white);
  }

  .cases-container {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    margin-top: 5rem;
  }

  .case-card {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    border-left: 4px solid var(--color-gold);
    padding: 3rem;
    background-color: var(--color-off-white);
    border-radius: 0 8px 8px 0;
  }

  .client-name {
    font-size: 2rem;
    color: var(--color-dark-brown);
    font-weight: 700;
  }

  .case-body {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2.5rem;
  }

  .case-section h4 {
    font-size: 0.9rem;
    text-transform: uppercase;
    color: var(--color-gold-metallic);
    margin-bottom: 1rem;
    letter-spacing: 0.1em;
  }

  .case-section p {
    font-size: 1.05rem;
    color: var(--text-secondary);
  }

  .case-section.impact {
    grid-column: span 2;
    background-color: var(--color-white);
    padding: 2rem;
    border: 1px dashed var(--color-gold);
    border-radius: 4px;
  }

  .case-section.impact p {
    font-weight: 600;
    color: var(--color-dark-brown);
    font-size: 1.2rem;
  }

  @media (max-width: 992px) {
    .case-card {
      grid-template-columns: 1fr;
    }
    .case-body {
      grid-template-columns: 1fr;
    }
    .case-section.impact {
      grid-column: span 1;
    }
  }

  .text-gold {
    color: var(--color-gold);
  }
</style>
