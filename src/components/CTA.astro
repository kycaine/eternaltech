---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section id="contact" class="final-cta">
  <div class="parallax-bg cta-bg"></div>
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">{t('cta.title')} <span class="text-gold">{t('cta.title_gold')}</span>?</h2>
      <p class="cta-text">
        {t('cta.text')}
      </p>
      <div class="cta-actions">
        <a href="mailto:consult@kycaine.tech" class="btn btn-gold">{t('cta.btn_primary')}</a>
        <a href="#portfolio" class="btn btn-secondary inverse">{t('cta.btn_secondary')}</a>
      </div>
    </div>
  </div>
</section>

<style>
  .final-cta {
    padding: 10rem 2rem;
    position: relative;
    overflow: hidden;
    color: var(--color-white);
    background-color: var(--color-dark-brown);
    text-align: center;
  }

  .cta-bg {
    background: linear-gradient(rgba(26, 18, 11, 0.8), rgba(26, 18, 11, 0.8)),
                radial-gradient(circle at 50% 50%, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
  }

  .cta-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .cta-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
  }

  .cta-text {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 4rem;
    line-height: 1.6;
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .btn.inverse {
    border-color: rgba(255, 255, 255, 0.3);
    color: var(--color-white);
  }

  .btn.inverse:hover {
    background-color: var(--color-white);
    color: var(--color-dark-brown);
  }

  .text-gold {
    color: var(--color-gold);
  }

  @media (max-width: 768px) {
    .cta-actions {
      flex-direction: column;
    }
  }
</style>
