---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const services_en = [
  {
    title: "AI Systems & LLM Integration",
    description: "Integrate LLM APIs into backend systems and deploy ML/DL inference services using FastAPI, covering preprocessing, prediction endpoints, and production-ready integration.",
    icon: "ü§ñ",
    tags: ["LLM Integration", "ML/DL Inference", "Model Serving"]
  },
  {
    title: "Backend API Development",
    description: "Design and build scalable REST APIs using Go, Java (Spring Boot), Node.js, and Python for data-heavy and high-traffic systems.",
    icon: "‚öôÔ∏è",
    tags: ["Go", "Spring Boot", "Node.js", "Python", "REST API", "Async Processing", "SQL/NoSQL"]
  },
  {
    title: "WhatsApp & Messaging Systems",
    description: "Develop backend services for WhatsApp-based commerce and messaging gateways with high-volume request handling.",
    icon: "üí¨",
    tags: ["WhatsApp Gateway", "High-Volume Messaging", "Order Processing", "External API Integration"]
  },
  {
    title: "System Architecture & Deployment",
    description: "Containerize and deploy backend services using Docker and AWS, with experience in Kubernetes-based environments.",
    icon: "‚òÅÔ∏è",
    tags: ["Docker", "AWS (EC2, S3)", "Kubernetes", "RabbitMQ"]
  },
];

const services_id = [
  {
    title: "Sistem AI & Integrasi LLM",
    description: "Mengintegrasikan API LLM ke dalam sistem backend serta melakukan deployment layanan inference ML/DL menggunakan FastAPI, mencakup preprocessing, endpoint prediksi, dan integrasi siap produksi.",
    icon: "ü§ñ",
    tags: ["Integrasi LLM", "Inference ML/DL", "Model Serving"]
  },
  {
    title: "Pengembangan Backend API",
    description: "Merancang dan membangun REST API yang scalable menggunakan Go, Java (Spring Boot), Node.js, dan Python untuk sistem dengan trafik tinggi dan data besar.",
    icon: "‚öôÔ∏è",
    tags: ["Go", "Spring Boot", "Node.js", "Python", "REST API", "Async Processing", "SQL/NoSQL"]
  },
  {
    title: "Sistem WhatsApp & Messaging",
    description: "Mengembangkan layanan backend untuk sistem WhatsApp commerce dan messaging gateway dengan kemampuan menangani request dalam volume tinggi.",
    icon: "üí¨",
    tags: ["WhatsApp Gateway", "High-Volume Messaging", "Order Processing", "Integrasi API Eksternal"]
  },
  {
    title: "Arsitektur & Deployment Sistem",
    description: "Melakukan containerization dan deployment layanan backend menggunakan Docker dan AWS, dengan pengalaman pada environment berbasis Kubernetes.",
    icon: "‚òÅÔ∏è",
    tags: ["Docker", "AWS (EC2, S3)", "Kubernetes", "RabbitMQ"]
  },
];

const services = lang === 'en' ? services_en : services_id;
---
<section id="services" class="services">
  <div class="container">
    <span class="section-subtitle">{t('services.subtitle')}</span>
    <h2 class="section-title">{t('services.title')} <span class="text-gold">{t('services.title_gold')}</span></h2>
    
    <div class="services-grid">
      {services.map(service => (
        <div class="service-card">
          <div class="service-icon">{service.icon}</div>
          <h3 class="service-title">{service.title}</h3>
          <p class="service-description">{service.description}</p>
          <div class="service-tags">
            {service.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    padding: var(--section-padding);
    background-color: var(--color-off-white);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
    margin-top: 4rem;
  }

  .service-card {
    background-color: var(--color-white);
    padding: 3rem 2rem;
    border-radius: 8px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    position: relative;
    overflow: hidden;
  }

  .service-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background-color: var(--color-gold);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s ease;
  }

  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.05);
  }

  .service-card:hover::after {
    transform: scaleX(1);
  }

  .service-icon {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .service-title {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--color-dark-brown);
  }

  .service-description {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .service-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tag {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.4rem 0.8rem;
    background-color: rgba(212, 175, 55, 0.1);
    color: var(--color-gold-metallic);
    font-weight: 600;
    border-radius: 4px;
  }

  .text-gold {
    color: var(--color-gold);
  }
</style>
